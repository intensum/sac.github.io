{
    "name": "calculator",
    "description": "Simple Calculator Widget",
    "newInstancePrefix": "calculatorwidget",
    "eula": "",
    "vendor": "Intensum",
    "license": "",
    "id": "calculatorwidget",
    "version": "0.0.1",
     "icon": "https://intensum.github.io/sac.github.io/SAC/WidgetCalculator/intensum_logo.png",
    "vendor": "Intensum",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "calculator-widget",
            "url": "https://intensum.github.io/sac.github.io/SAC/WidgetCalculator/CalculatorWidget.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "com-sap-sample-calculator-styling",
            "url": "https://intensum.github.io/sac.github.io/SAC/WidgetCalculator/style-panel.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "builder",
            "tag": "com-sap-sample-calculator-builder",
            "url": "https://intensum.github.io/sac.github.io/SAC/WidgetCalculator/builder-panel.js",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "width": {
            "type": "integer",
            "default": 300
        },
        "height": {
            "type": "integer",
            "default": 400
        },
        "numberColor": {
            "type": "string",
            "default": "#000000"
        },
        "decimalPlaces": {
            "type": "integer",
            "default": 2
        },
        "equalColor": {
            "type": "string",
            "default": "#00FF00"
        },
        "clearColor": {
            "type": "string",
            "default": "#FF0000"
        }
    },
    "methods": {
        "clear": {
            "description": "Clear the calculator"
        }
    },
    "events": {
        "onCalculation": {
            "description": "Called when a calculation is performed."
        }
    },
    
 "dataBindings": {
        "myDataBinding": {
            "feeds": [
                {
                    "id": "dimensions",
                    "description": "Dimensions",
                    "type": "dimension"
                },
                {
                    "id": "measures",
                    "description": "Measures",
                    "type": "mainStructureMember"
                }
            ]
        }
    }
}
